package p2446;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		
		int input = scanner.nextInt();
		
		int totalSpace = input * 2 - 1; 
		
		for(int i = 0; i < input; i++) {
			
			for(int j = 0; j < totalSpace; j++) {
				System.out.println("*");
			}
			System.out.println("");
		}
		
	}

}
